+import React, { useEffect, useState } from 'react';
+import { api } from '../../services/api';
+
+export function ContributionApprovalQueue() {
+  const [pending, setPending] = useState([]);
+
+  useEffect(() => {
+    loadPending();
+  }, []);
+
+  async function loadPending() {
+    const data = await api.get('/contributions?status=pending');
+    setPending(data.contributions);
+  }
+
+  async function approve(id: string, credits: number) {
+    await api.patch(`/contributions/${id}/approve`, {
+      adjusted_credits: credits,
+    });
+    loadPending();
+  }
+
+  async function reject(id: string, reason: string) {
+    await api.patch(`/contributions/${id}/reject`, { reason });
+    loadPending();
+  }
+
+  return (
+    <div className="approval-queue">
+      <h2>Pending Contributions ({pending.length})</h2>
+      {pending.map(contrib => (
+        <ContributionCard
+          key={contrib.id}
+          contribution={contrib}
+          onApprove={approve}
+          onReject={reject}
+        />
+      ))}
+    </div>
+  );
+}
