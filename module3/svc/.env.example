# Grafana Configuration
GRAFANA_VERSION=latest
GRAFANA_CONTAINER_NAME=configservice-grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ALLOW_SIGNUP=false

# cAdvisor Configuration
CADVISOR_VERSION=v0.52.0
CADVISOR_CONTAINER_NAME=configservice-cadvisor
CADVISOR_PORT=8080