# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/configservice
DB_HOST=localhost
DB_PORT=5432
DB_NAME=configservice
DB_USER=user
DB_PASSWORD=password
DB_POOL_MIN_CONN=1
DB_POOL_MAX_CONN=20

# Docker Container Configuration
POSTGRES_VERSION=16
POSTGRES_CONTAINER_NAME=configservice-db
DATABASE_NAME=configservice
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_PORT=5432
DATABASE_HOST=postgres
DATABASE_INTERNAL_PORT=5432

# Configuration Service Container
CONFIG_SERVICE_CONTAINER_NAME=configservice-app
CONFIG_SERVICE_PORT=8000

# Application Configuration
LOG_LEVEL=INFO
API_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# OpenTelemetry Collector Configuration
OTEL_COLLECTOR_VERSION=latest
OTEL_COLLECTOR_CONTAINER_NAME=configservice-otel-collector
OTEL_GRPC_PORT=4317
OTEL_HTTP_PORT=4318
OTEL_METRICS_PORT=8889

# Prometheus Configuration
PROMETHEUS_VERSION=latest
PROMETHEUS_CONTAINER_NAME=configservice-prometheus
