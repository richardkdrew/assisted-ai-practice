{
  "id": null,
  "title": "Configuration Service - Application Metrics",
  "tags": ["configuration-service", "application", "monitoring"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{endpoint}} {{status_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    },
    {
      "id": 2,
      "title": "HTTP Request Duration",
      "type": "timeseries",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "95th percentile"
        },
        {
          "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "50th percentile"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      },
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "id": 3,
      "title": "Total HTTP Requests",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(http_requests_total)",
          "legendFormat": "Total Requests"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8}
    },
    {
      "id": 4,
      "title": "Database Connections",
      "type": "stat",
      "targets": [
        {
          "expr": "database_connections_active",
          "legendFormat": "Active Connections"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8}
    },
    {
      "id": 5,
      "title": "Applications",
      "type": "stat",
      "targets": [
        {
          "expr": "applications_total",
          "legendFormat": "Total Applications"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8}
    },
    {
      "id": 6,
      "title": "Configurations",
      "type": "stat",
      "targets": [
        {
          "expr": "configurations_total",
          "legendFormat": "Total Configurations"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      },
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8}
    },
    {
      "id": 7,
      "title": "HTTP Status Codes",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum by (status_code) (rate(http_requests_total[5m]))",
          "legendFormat": "{{status_code}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      },
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12}
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "refresh": "5s",
  "version": 1
}